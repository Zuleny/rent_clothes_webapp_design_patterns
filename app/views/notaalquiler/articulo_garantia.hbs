<div class="row">
    <div class="col-sm-6">
        <div class="card text-success">
            <div class="card-header fw-bold">
                Articulo
            </div>
            <form action="/notaalquiler/articulo/crear" method="post">
                <input type="hidden" name="nro_notaalquiler" value="{{notaalquiler.nro}}">
                <div class="card-body">
                    <div class="mb-3">
                        <label for="codigo_articulo" class="form-label">Articulo</label>
                        <select class="form-control" name="codigo_articulo" id="codigo_articulo">
                            {{#each articuloList}}
                            <option value="{{codigo}}">{{nombre}} (Bs. {{precio}})</option>
                            {{/each}}
                        </select>
                    </div>
                    <div class="mb-3">
                        <label for="cantidad" class="form-label">Cantidad</label>
                        <input type="number" min="1" class="form-control" id="cantidad" name="cantidad" placeholder="2"
                            required>
                    </div>
                    <input name="" id="" class="btn btn-success" type="submit" value="Agregar">

                </div>
            </form>

        </div>
    </div>

    <div class="col-sm-6">
        <div class="overflow-scroll" style="max-width: 620px; max-height: 280px;">
            <table class="table table-success table-bordered">
                <thead>
                    <tr>
                        <th>Articulo</th>
                        <th>Cant.</th>
                        <th>Precio</th>
                        <th>SubTotal</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    {{#each notaAlquilerArticulo}}
                    <tr>
                        <td>{{nombre}}</td>
                        <td>{{cantidad}}</td>
                        <td>{{precio}}</td>
                        <td>{{multiply cantidad precio}}</td>
                        <td>
                            <form
                                action="/notaalquiler/articulo/eliminar/{{nro_notaalquiler}}/{{codigo_articulo}}?_method=DELETE"
                                method="post">
                                <input type="hidden" name="_method" value="DELETE">
                                <button class="btn btn-danger btn-sm" type="submit"><i class="bi bi-trash"></i></button>
                            </form>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>
