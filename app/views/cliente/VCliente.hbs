<div class="card">
    <div class="card-header text-success fw-bold">
        Clientes
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-success table-bordered">
                <thead>
                    <tr>
                        <th>CI</th>
                        <th>Nombre</th>
                        <th>Email</th>
                        <th>Telefono</th>
                        <th>Acción</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each list}}
                    <tr>
                        <td>{{ci}}</td>
                        <td>{{nombre}}</td>
                        <td>{{email}}</td>
                        <td>{{telefono}}</td>
                        <td>
                            <div class="btn-group" role="group" aria-label="">
                                <form action="/cliente/{{ci}}" method="get">
                                    <button type="submit" class="btn btn-outline-warning" data-bs-toggle="collapse "
                                        data-bs-target="#collapseExample" aria-expanded="false"
                                        aria-controls="collapseExample">
                                        Editar
                                    </button>
                                </form>

                                <form action="/cliente/eliminar/{{ci}}?_method=DELETE" method="post">
                                    <input type="hidden" name="_method" value="DELETE">
                                    <button type="submit" class="btn btn-outline-danger">Borrar</button>
                                </form>
                            </div>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>